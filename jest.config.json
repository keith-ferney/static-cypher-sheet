{
  "testEnvironment": "jsdom",
  "testMatch": ["**/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/app.js"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/tests/"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "coverageDirectory": "coverage",
  "moduleFileExtensions": ["js", "json"],
  "transform": {}
}
